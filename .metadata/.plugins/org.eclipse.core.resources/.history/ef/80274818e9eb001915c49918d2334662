package com.spoors.validation;

import org.springframework.validation.Errors;
import org.springframework.validation.Validator;

import com.spoors.bean.Employee;

public class EmployeeValidator implements Validator{

	public boolean supports(Class<?> clazz) {
		// TODO Auto-generated method stub
		return clazz.isAssignableFrom(Employee.class);
	}

	public void validate(Object target, Errors errors) {
		// TODO Auto-generated method stub
		Employee emp=(Employee) target;
		if(emp.getEmail().equals("")||emp.getEmail()==null)
			errors.reject("Email","error.email");
		if(emp.getName().equals("")||emp.getName()==null)
			errors.reject("name", "error.name");
		if(emp.getPass().equals("")||emp.getPass()==null)
			errors.reject("pass","error.pass");
		if(emp.getAddrs().equals("")||emp.getAddrs()==null)
			errors.reject("addrs", "error.addrs");
	}

}
